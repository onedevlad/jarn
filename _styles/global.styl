@import 'vars.styl'
@font-face
	font-family 'regular'
	src url('../_fonts/roboto_regular.ttf') format('truetype')
	font-style normal
	font-weight normal
@font-face
	font-family 'light'
	src url('../_fonts/roboto_light.ttf') format('truetype')
	font-style normal
	font-weight normal
@font-face
	font-family 'bold'
	src url('../_fonts/roboto_bold.ttf') format('truetype')
	font-style normal
	font-weight normal

a
a:link
a:visited
	text-decoration none
	cursor pointer
.brand_link
	color l_gray
	font-weight bold
	&:hover
		color white
.brand_text
	color l_gray
::-webkit-scrollbar
	width 5px
	height 5px
::-webkit-scrollbar-thumb
	background d_white
	&:hover
		background white
::-webkit-scrollbar-track
	background d_gray
#fake_scrollbar
	width 5px
	fixed right 0
	display none
	height 100%
	background d_gray
button
	border none
	outline none
	cursor pointer
	padding 0
	background none
	color l_gray
	&:hover
		color white
.backward
.forward
	padding 1em
	z-index 3
	background blue
	color l_gray
	display inline-block
	height 7%
	&:hover
		color white
.backward
	absolute left 2% bottom 0
.forward
	absolute right 2% bottom 0

table
	border none
	border-spacing 0
input[type="text"]
	border-radius 3px
	padding 2px
	border 1px solid blue
input[type="number"]
	margin-top 0.1em
	padding 2px
	width 3.5em
	font-size 0.9em
	border-radius 3px
input[type="range"]
	height 5px
	outline none
	background d_gray
	-webkit-appearance none
input[type="range"]::-webkit-slider-thumb
	width 1em
	height 1em
	cursor pointer
	border-radius 100%
	background d_white
	-webkit-appearance none
input[type='range']:focus::-webkit-slider-thumb
	background white
input[type="checkbox"]
input[type="radio"]
	display none
.checkbox_body
	border 1px solid rgba(orange, 0.2)
	position relative
	display inline-block
	width 2em
	height 1em
	cursor pointer
	border-radius 1em
	background d_white
.checkbox_inner
	cursor pointer
	position absolute
	top 1px
	left 1px
	width 0.7em
	height 0.7em
	transition all 150ms ease
	border-radius 100%
	background white
	box-shadow 1px 1px 1px rgba(20, 20, 20, 0.4)
input[type="checkbox"]:checked ~ .checkbox_body > .checkbox_inner
	left 1.1em
	box-shadow -1px 1px 1px rgba(20, 20, 20, 0.4)
input[type="checkbox"]:checked ~ .checkbox_body
	background orange
.radio_body
	position relative
	display inline-block
	width 1em
	height 1em
	cursor pointer
	border-radius 100%
	background white
.radio_inner
	position absolute
	top 0.3em
	left 0.3em
	width 0.4em
	height 0.4em
	cursor pointer
	border-radius 100%
	background orange
.custom_select_wrapper
	z-index 10
	width 100%
	display block
	position relative
	height 1.5em
	.custom_select
		width 100%
		absolute top left
		display block
		border 1px solid blue
		border-radius 3px
		padding-top 1.5em
		.custom_option
			width 100%
			padding 0 2em 0 1em
			display inline-block
			&:not(.chosen)
				background blue
			&.chosen
				z-index 2
				height 1.5em
				line-height 1.5em
				absolute top 0
				background transparent
				border-bottom 1px solid l_black
				overflow hidden
				&:hover
					color l_gray
				&::after
					z-index 2
					content ''
					absolute top 0.4em right 0.5em
					display inline-block
					width 0
					height 0
					border-left 0.375em solid transparent;
					border-right 0.375em solid transparent;
					border-top 0.75em solid blue;
				&.hidden
					display none
			&:hover
				color d_white
		&.wrapped
			height 1.5em
			overflow-y hidden
input[type="radio"] ~ .radio_body > .radio_inner
	display none
input[type="radio"]:checked ~ .radio_body > .radio_inner
	display block
.color_wrapper
	input[type="color"]
		opacity 0
		border none
		cursor pointer
textarea
	background none
	outline none
	border none
canvas
	image-rendering optimizeSpeed /* old WebKit, Safari, FireFox 3.6+ */
	image-rendering -webkit-optimize-contrast /* newer WebKit (CSS3 proposal) */
	image-rendering -o-crisp-edges /* Opera 11.6+ (CSS4 prefixed) */
	image-rendering -moz-crisp-edges /* FF 6+ (CSS4 prefixed) */
	image-rendering crisp-edges /* CSS4 */
#hint_box
	font-size 20px
	position fixed
	z-index 6
	left -420px
	display block
	width 400px
	padding 5px
	color white
	border-radius 5px
	background d_gray
	box-shadow 0 0 10px white
	.hint_ps
		font-size 15px
#noscript
	font-size 30px
	line-height 20vh
	position fixed
	z-index 1000
	top 0
	left 0
	overflow auto
	width 100%
	height 100%
	padding-top 20vh
	text-align center
	color d_gray
	background white
.msg_ok
.msg_cancel
	font-size 1.25em
	display inline-block
	color l_black
	&:hover
		color d_gray
.msg_ok
	margin 20px 15px 15px 0
	float right
.msg_cancel
	margin 20px 0 15px 15px
	float left
.overlay
	position fixed
	z-index 1000
	top 0
	left 0
	display block
	width 100%
	height 100%
	animation overlay 0.6s ease-out 0s 1 alternate forwards
.msg_div
	font-weight bold
	position absolute
	z-index 1002
	top -100%
	right 0
	left 0
	display block
	overflow hidden
	width 500px
	margin 0 auto
	border 1px solid l_black
	border-radius 20px
	background white
	animation msg_div 0.55s ease-out 0.4s 1 alternate forwards
.msg_title
	text-shadow 0 1px 0 rgba(0, 0, 0, 0.4)
	font-size 1.5em
	line-height 40px
	display block
	width 100%
	margin 0
	padding 10px 0 10px 15px
	word-break break-all
	color white
	background l_black
.msg_text
	text-shadow none
	z-index 10000
	width 100%
	padding 15px
	text-align justify
	word-break normal
	color l_black
@keyframes overlay
	from{
		background rgba(0,0,0,0.0)
	}
	to{
		background rgba(0, 0, 0, 0.70)
	}
@keyframes msg_div
	0%
		top -100%
	100%
		top 13%
.invalid
	color red
*
	margin 0
	padding 0
	position relative
	font-family regular
	font-size 16px
	user-select none
	box-sizing border-box
	cursor default
	text-shadow 0 1px 1px black
	text-overflow ellipsis
	box-sizing border-box
html
body
	width 100%
	height 100%
body
	background url('../_images/bg.jpg') no-repeat fixed
	background-size 100% 100%
	overflow-x hidden

/** ALL SCREENS **/

#global_overlay
	width 100%
	fixed 0 0
	height 100%
	z-index 20
	background l_gray
	transition all 0.6s ease

header
	background rgba(black, 0.8)
	height 9%
	width 100%
	fixed top 0
	z-index 8
	.header
		display inline-block
		height 100%
		color d_gray
		.brand
			color d_gray
			font-size 300%
			&:hover
				color white
		.secondary
			font-size 110%
	.hamburger_icon
		absolute top 0 right 0
		color d_gray
		font-size 2em
		height 100%
		padding 0.2em 0.4em
		cursor pointer
		&:hover
			color white
	.nav
		height 100%
		text-align center
		overflow-y hidden
		li
			list-style none
			height 100%
			cursor pointer
			.navlink
				height 100%
				display inline-block
				color l_gray
			&:hover
			&.active
				a
				a span
					cursor pointer
					color white
					text-shadow none
			.settings_img
				margin 0.1em 0.3em 0 0
				width 0.9em
				height 0.9em

article
	text-align center
	width 100%
	height 100%
	section
		width 100%
		height 100%
		.step_inner
			top 9%
			height 84%
		.step_overlay
			width 100%
			background rgba(black, 0.8)
			z-index 7
			absolute bottom 0 left 0
	.step_2 .step_overlay
			height 91%
	.step_3 .step_overlay
			height 100%

/** GRATER THAN MOBILE BREAKPOINT **/

@media(min-width nav_gt_breakpoint)
	header
		padding 0 2%
		.nav
			display inline-block
			height auto !important
			float right
			li
				display inline-block
				.navlink
					padding 1.9em 1em 1em 1em
		.hamburger_icon
			display none

/** LOWER THAN MOBILE BREAKPOINT */
@media(max-width mobile_breakpoint)
	#hint_box
		display none

@media(max-width nav_lt_breakpoint)
	header
		padding 0
		.header
			margin-left 2%
			display block
		.hamburger_icon
			display block
		.nav
			background rgba(black, 0.8)
			width 100%
			display block
			text-align left
			height 0
			float left
			li
				display block
				.navlink
					padding 1em 2%